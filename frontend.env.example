# Coffee & Tea E-commerce Development Environment

# Frontend Environment Variables
# Copy this file to .env.local in the frontend directory

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME="Coffee & Tea Store"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters-long"

# ===========================================
# SOCIAL AUTHENTICATION
# ===========================================
# Google OAuth (must match backend)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-oauth-client-id"

# Facebook OAuth
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"

# ===========================================
# PAYMENT PROCESSING
# ===========================================
# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="your-google-analytics-measurement-id"

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# ===========================================
# FILE UPLOAD
# ===========================================
# Cloudinary (for client-side uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-upload-preset"

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_GUEST_CHECKOUT=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true

# ===========================================
# UI/UX CONFIGURATION
# ===========================================
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_CURRENCY="USD"
NEXT_PUBLIC_CURRENCY_SYMBOL="$"
NEXT_PUBLIC_DEFAULT_LOCALE="en-US"

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable development features
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# ===========================================
# SEO & META
# ===========================================
NEXT_PUBLIC_SITE_NAME="Coffee & Tea Store"
NEXT_PUBLIC_SITE_DESCRIPTION="Premium coffee and tea e-commerce platform"
NEXT_PUBLIC_SITE_KEYWORDS="coffee, tea, organic, premium, online store"

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Map Services (for store locator)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Chat Support
NEXT_PUBLIC_INTERCOM_APP_ID="your-intercom-app-id"

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================
NEXT_PUBLIC_CDN_URL=""
NEXT_PUBLIC_IMAGE_DOMAINS="localhost,cloudinary.com,your-domain.com"

# ===========================================
# NOTIFICATIONS
# ===========================================
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
