{
  "name": "coffee-tea-backend",
  "version": "1.0.0",
  "description": "Coffee & Tea E-commerce Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --testPathPattern=e2e --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit --runInBand",
    "test:auth": "cross-env NODE_ENV=test jest auth.integration.test.ts --runInBand",
    "test:products": "cross-env NODE_ENV=test jest products.integration.test.ts --runInBand",
    "test:orders": "cross-env NODE_ENV=test jest orders.integration.test.ts --runInBand",
    "test:workflows": "cross-env NODE_ENV=test jest complete-workflows.e2e.test.ts --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "db:reset": "npm run db:migrate:reset && npm run db:seed",
    "db:health": "ts-node --transpile-only scripts/health-check.ts",
    "db:test:setup": "cross-env NODE_ENV=test npm run db:generate && cross-env NODE_ENV=test npm run db:push",
    "setup:windows": "scripts\\setup-database-windows.bat",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "@sendgrid/mail": "^7.7.0",
    "@types/helmet": "^0.0.48",
    "@types/redis": "^4.0.10",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.7.1",
    "sharp": "^0.34.3",
    "stripe": "^13.5.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.5.9",
    "@types/nodemailer": "^6.4.9",
    "@types/passport": "^1.0.12",
    "@types/passport-facebook": "^3.0.0",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.2",
    "prisma": "^5.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.8.0"
  },
  "keywords": [
    "ecommerce",
    "coffee",
    "tea",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "typescript"
  ],
  "author": "Coffee & Tea Development Team",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
